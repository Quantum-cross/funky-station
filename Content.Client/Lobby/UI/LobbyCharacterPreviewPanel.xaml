<Control
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:style="clr-namespace:Content.Client.Stylesheets"
    xmlns:ui="clr-namespace:Content.Client.Lobby.UI">
    <BoxContainer Name="VBox" Orientation="Vertical">
        <controls:NanoHeading Name="Header" Text="{Loc 'lobby-character-preview-panel-header'}" />

        <!-- This is the main bit, only shows once we have preferences from the server -->
        <BoxContainer Name="Loaded" Orientation="Vertical" Visible="False">

            <!-- Where we show ALL the jobs, separated into priorities -->
            <BoxContainer Name="JobGrid"
                          VerticalExpand="True"
                          HorizontalExpand="True"
                          SeparationOverride="6">

                <!-- Jobs with "Never" priority -->
                <ui:DraggableJobTarget Name="NeverBox" Priority="Never" />
                <!-- <BoxContainer Orientation="Vertical" HorizontalExpand="True"> -->
                <!--     <Label Text="{Loc 'humanoid-profile-editor-job-priority-never-button'}" HorizontalAlignment="Center" StyleClasses="LabelBig" Margin="0 6"/> -->
                <!--     ~1~ We stuff the job icons into this GridContainer @1@ -->
                <!--     <GridContainer Name="NeverBox" MaxGridWidth="140" HorizontalAlignment="Center"/> -->
                <!-- </BoxContainer> -->

                <!-- Vertical rule -->
                <PanelContainer MinSize="2 0">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="{x:Static style:StyleNano.NanoGold}" ContentMarginTopOverride="2" />
                    </PanelContainer.PanelOverride>
                </PanelContainer>

                <!-- Jobs with "Low" priority -->
                <ui:DraggableJobTarget Name="LowBox" Priority="Low" />
                <!-- <BoxContainer Orientation="Vertical" HorizontalExpand="True"> -->
                <!--     <Label Text="{Loc 'humanoid-profile-editor-job-priority-low-button'}" HorizontalAlignment="Center" StyleClasses="LabelBig" Margin="6"/> -->
                <!--     <GridContainer Name="LowBox" MaxGridWidth="140" HorizontalAlignment="Center"/> -->
                <!-- </BoxContainer> -->

                <!-- Vertical rule -->
                <PanelContainer MinSize="2 0">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="{x:Static style:StyleNano.NanoGold}" ContentMarginTopOverride="2" />
                    </PanelContainer.PanelOverride>
                </PanelContainer>

                <!-- Jobs with "Medium" priority -->
                <ui:DraggableJobTarget Name="MediumBox" Priority="Medium" />
                <!-- <BoxContainer Orientation="Vertical" HorizontalExpand="True"> -->
                <!--     <Label Text="{Loc 'humanoid-profile-editor-job-priority-medium-button'}" HorizontalAlignment="Center" StyleClasses="LabelBig" Margin="0 6"/> -->
                <!--     <GridContainer Name="MediumBox" MaxGridWidth="140" HorizontalAlignment="Center"/> -->
                <!-- </BoxContainer> -->

                <!-- Vertical rule -->
                <PanelContainer MinSize="2 0">
                    <PanelContainer.PanelOverride>
                        <graphics:StyleBoxFlat BackgroundColor="{x:Static style:StyleNano.NanoGold}" ContentMarginTopOverride="2" />
                    </PanelContainer.PanelOverride>
                </PanelContainer>

                <!-- THE job with "HIGH" priority -->
                <ui:DraggableJobTarget Name="HighBox" Priority="High" />
                <!-- <BoxContainer Orientation="Vertical" HorizontalExpand="True"> -->
                <!--     <Label Text="{Loc 'humanoid-profile-editor-job-priority-high-button'}" HorizontalAlignment="Center" StyleClasses="LabelBig" Margin="0 6"/> -->
                <!--     ~1~ There can only be one high priority job, so bigger boxcontainer instead of a grid @1@ -->
                <!--     <BoxContainer Name="HighBox" HorizontalAlignment="Center" VerticalAlignment="Center"/> -->
                <!-- </BoxContainer> -->

            </BoxContainer> <!-- End job grids -->

            <controls:VSpacer/>

            <!-- Character setup button -->
            <Button Name="CharacterSetup" Text="{Loc 'lobby-character-preview-panel-character-setup-button'}"
                    HorizontalAlignment="Center"
                    Margin="0 5 0 0"/>
        </BoxContainer>
        <Label Name="Unloaded" Text="{Loc 'lobby-character-preview-panel-unloaded-preferences-label'}"/>
    </BoxContainer>
</Control>
